<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cyberlearn.app.controller.QuizController" spacing="10" styleClass="content">
    <fx:define>
        <ToggleGroup fx:id="optionsGroup"/>
    </fx:define>
    
    <Label text="ðŸ§  Quick Quiz" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Separator/>
    <Label fx:id="lblPrompt" wrapText="true" style="-fx-font-size: 14px;"/>
    
    <VBox spacing="8" style="-fx-padding: 10;">
        <RadioButton fx:id="optA" toggleGroup="$optionsGroup" style="-fx-font-size: 13px;"/>
        <RadioButton fx:id="optB" toggleGroup="$optionsGroup" style="-fx-font-size: 13px;"/>
        <RadioButton fx:id="optC" toggleGroup="$optionsGroup" style="-fx-font-size: 13px;"/>
    </VBox>
    
    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Button text="Next Question" onAction="#onNext" style="-fx-background-color: #00ff88; -fx-text-fill: black; -fx-font-weight: bold;"/>
        <Label fx:id="lblScore" text="Score: 0" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    </HBox>
</VBox>
