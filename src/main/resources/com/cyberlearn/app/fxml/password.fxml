<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cyberlearn.app.controller.PasswordManagerController" spacing="8" styleClass="content">
    <Label text="ðŸ”‘ Secure Password Manager (Local Vault)"/>
    <HBox spacing="8">
        <Label text="Master:"/>
        <PasswordField fx:id="txtMaster" promptText="Master password to encrypt/decrypt vault"/>
        <Button text="Open" onAction="#onOpen"/>
        <Button text="Save" onAction="#onSave"/>
        <Label fx:id="lblStatus" text="Ready"/>
    </HBox>
    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>
        <Label text="Site/URL" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Password" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <Label text="Note" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <TextField fx:id="txtSite" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtUser" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <PasswordField fx:id="txtPass" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="txtNote" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>
    
    <HBox spacing="8">
        <Label text="Strength:"/>
        <ProgressBar fx:id="strengthBar" prefWidth="200"/>
        <Button text="Generate Strong Password" onAction="#onGenerate"/>
    </HBox>
    
    <Button text="Add Entry" onAction="#onAdd"/>
    <TableView fx:id="table" prefHeight="400">
        <columns>
            <TableColumn fx:id="colSite" text="Site"/>
            <TableColumn fx:id="colUser" text="Username"/>
            <TableColumn fx:id="colPass" text="Password"/>
            <TableColumn fx:id="colNote" text="Note"/>
        </columns>
    </TableView>
</VBox>
