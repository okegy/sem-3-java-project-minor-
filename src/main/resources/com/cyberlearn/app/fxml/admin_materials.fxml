<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cyberlearn.app.controller.AdminMaterialsController">
    <top>
        <HBox spacing="8" styleClass="topbar">
            <Button text="← Back" onAction="#onBack" styleClass="nav-button"/>
            <Label text="Admin — Learning Materials" styleClass="brand"/>
        </HBox>
    </top>
    <center>
        <SplitPane>
            <items>
                <VBox spacing="8" styleClass="content">
                    <Label text="Materials"/>
                    <TableView fx:id="table" prefHeight="420">
                        <columns>
                            <TableColumn fx:id="colTitle" text="Title" prefWidth="220"/>
                            <TableColumn fx:id="colLevel" text="Level" prefWidth="120"/>
                        </columns>
                    </TableView>
                    <HBox spacing="8">
                        <Button text="New" onAction="#onNew"/>
                        <Button text="Save" onAction="#onSave"/>
                        <Button text="Delete" onAction="#onDelete"/>
                        <Button text="Export Booklet (PDF)" onAction="#onExportBooklet"/>
                        <Label fx:id="lblStatus"/>
                    </HBox>
                </VBox>
                <VBox spacing="8" styleClass="content">
                    <Label text="Editor"/>
                    <Label text="Title"/><TextField fx:id="txtTitle"/>
                    <Label text="Level"/><TextField fx:id="txtLevel" promptText="e.g., L3 Crypto"/>
                    <Label text="Description"/><TextArea fx:id="txtDesc" prefRowCount="6"/>
                    <Label text="Links (one per line)"/><TextArea fx:id="txtLinks" prefRowCount="8"/>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
